<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Script file="ScubaLoot.lua"/>

    <!-- ScubaLootCheckboxTemplate -->

    <CheckButton name="ScubaLootCheckboxTemplate" hidden="false" virtual="true">
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Layers>
            <Layer level="ARTWORK">relativeTo="ScubaLootFrame"
                <FontString name="$parentText" inherits="GameFontNormalSmall" text="">
                    <Anchors>
                        <Anchor point="LEFT" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
        <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
    </CheckButton>

    <!-- ScubaLootSortTemplate -->

    <Button name="ScubaLootSortTemplate" virtual="true">
        <Size>
            <AbsDimension x="210" y="24"/>
        </Size>
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentIcon">
                    <Size>
                        <AbsDimension x="22" y="22"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="4" y="-1"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString name="$parentName" font="GameFontHighlight" justifyH="LEFT">
                    <Size>
                        <AbsDimension x="170" y="22"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentIcon" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="RIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture name="$parentHighlight" file="Interface\QuestFrame\UI-QuestLogTitleHighlight" hidden="true" alphaMode="ADD">
                    <Size>
                        <AbsDimension x="210" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
                    getglobal(this:GetName().."Highlight"):Show()
                    ScubaLoot_ShowTooltip()
            </OnEnter>
            <OnLeave>
                    if not this.lockedHighlight then
                        getglobal(this:GetName().."Highlight"):Hide()
                    end
                    GameTooltip:Hide()
            </OnLeave>
        </Scripts>
    </Button>

    <!-- ScubaLootFrame - main frame for the gui -->

    <Frame name="ScubaLootFrame" toplevel="true" movable="true" parent="UIParent" enableMouse="true" hidden="true">
        <TitleRegion setAllPoints="true"/>
        <Size>
            <AbsDimension x="325" y="295" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Scripts>
            <OnLoad>
                ScubaLoot_OnLoad()
            </OnLoad>
            <OnEvent>
                ScubaLoot_OnEvent(event, arg1, arg2, arg3, arg4, arg5)
            </OnEvent>
            <OnShow>
                ScubaLootFrameTitleText_OnShow()
            </OnShow>
        </Scripts>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
                  tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11" />
                <Size>
                    <AbsDimension x="128" y="17" />
                </Size>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32" />
            </TileSize>
            <EdgeSize>
                <AbsValue val="32" />
            </EdgeSize>
        </Backdrop>

        <Layers>
            <Layer level="ARTWORK">
                <Texture name="ScubaLootFrameTitle" file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size>
                        <AbsDimension x="276" y="64" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="12" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>

                <FontString name="ScubaLootFrameTitleText" inherits="GameFontNormal" text="Hi">
                    <Anchors>
                        <Anchor point="TOP" relativeTo="ScubaLootFrame">
                            <Offset>
                                <AbsDimension x="0" y="-2" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <!-- ScubaLootFrame's internal frames -->

        <Frames>

            <!-- individual buttons for each link -->

            <Button name="ScubaLootMainItem" inherits="ScubaLootSortTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootFrame">
                        <Offset>
                            <AbsDimension x="10" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>

            <Button name="ScubaLootSort1" inherits="ScubaLootSortTemplate" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootMainItem">
                        <Offset>
                            <AbsDimension x="10" y="-20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort2" inherits="ScubaLootSortTemplate" id="2">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort1" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort3" inherits="ScubaLootSortTemplate" id="3">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort2" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort4" inherits="ScubaLootSortTemplate" id="4">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort3" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort5" inherits="ScubaLootSortTemplate" id="5">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort4" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort6" inherits="ScubaLootSortTemplate" id="6">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort5" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort7" inherits="ScubaLootSortTemplate" id="7">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort6" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort8" inherits="ScubaLootSortTemplate" id="8">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort7" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootSort9" inherits="ScubaLootSortTemplate" id="9">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootSort8" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>

            <!-- scroll frame to contain the buttons above -->

            <ScrollFrame name="ScubaLootScrollFrame" inherits="FauxScrollFrameTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootFrame"/>
                    <Anchor point="BOTTOMRIGHT" relativeTo="ScubaLootFrame"/>
                </Anchors>
                <Layers>
                    <Layer level="BACKGROUND">
                        <Texture file="Interface\ChatFrame\ChatFrameBackground">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativePoint="TOPRIGHT">
                                    <Offset>
                                        <AbsDimension x="0" y="2"/>
                                    </Offset>
                                </Anchor>
                                <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT">
                                    <Offset>
                                        <AbsDimension x="25" y="-2"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                            <Gradient>
                                <MinColor r="0" g="0" b="0" a="0"/>
                                <MaxColor r="0" g="0" b="0" a="1"/>
                            </Gradient>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnVerticalScroll>
                        FauxScrollFrame_OnVerticalScroll(24, ScubaLoot_ScrollFrameUpdate)
                    </OnVerticalScroll>
                    <OnShow>
                            ScubaLoot_ScrollFrameUpdate()
                    </OnShow>
                </Scripts>
            </ScrollFrame>

            <!---->

            <CheckButton name="BattleShoutCheckbox" inherits="BuffBlockCheckboxTemplate">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="BuffBlockOptions">
                        <Offset>
                            <AbsDimension x="20" y="-45" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnShow>

                    </OnShow>
                    <OnClick>

                    </OnClick>
                </Scripts>
            </CheckButton>

            <Button name="ScubaLootClose" inherits="GameMenuButtonTemplate" text="X">
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOP" relativeTo="SCUBALOOTFRAME">
                        <Offset>
                            <AbsDimension x="0" y="30" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                            this:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>

            <!---->

        </Frames>
    </Frame>
</Ui>
