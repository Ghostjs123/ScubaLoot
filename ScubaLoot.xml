<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

    <Script file="ScubaLoot.lua"/>

    <!-- ScubaLootCheckboxTemplate -->

    <CheckButton name="ScubaLootCheckboxTemplate" hidden="false" virtual="true">
        <Size>
            <AbsDimension x="32" y="32"/>
        </Size>
        <Scripts>
            <OnShow>

            </OnShow>
            <OnClick>

            </OnClick>
        </Scripts>
        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
        <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
    </CheckButton>

    <!-- ScubaLootSortTemplate -->

    <Button name="ScubaLootItemRowTemplate" virtual="true">
        <Size>
            <AbsDimension x="210" y="24"/>
        </Size>
        <Layers>
            <Layer level="ARTWORK">
                <!--<CheckButton name="$parentCheckbox">
                    <Size>
                        <AbsDimension x="32" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="4" y="0" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                    <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                    <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                    <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                    <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                    <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
                </CheckButton>-->
                <!--<FontString name="$parentPlayer" font="GameFontHighlight" justifyH="LEFT">
                    <Size>
                        <AbsDimension x="100" y="22"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentCheckbox" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="RIGHT"/>
                    </Anchors>
                </FontString>-->
                <Texture name="$parentIcon">
                    <Size>
                        <AbsDimension x="22" y="22"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentPlayer">
                            <Offset>
                                <AbsDimension x="4" y="-1"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString name="$parentName" font="GameFontHighlight" justifyH="LEFT">
                    <Size>
                        <AbsDimension x="170" y="22"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentIcon" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="4" y="0"/>
                            </Offset>
                        </Anchor>
                        <Anchor point="RIGHT"/>
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture name="$parentHighlight" file="Interface\QuestFrame\UI-QuestLogTitleHighlight" hidden="true" alphaMode="ADD">
                    <Size>
                        <AbsDimension x="210" y="24"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Scripts>
            <OnEnter>
                    getglobal(this:GetName().."Highlight"):Show()
                    ScubaLoot_ShowTooltip()
            </OnEnter>
            <OnLeave>
                    if not this.lockedHighlight then
                        getglobal(this:GetName().."Highlight"):Hide()
                    end
                    GameTooltip:Hide()
            </OnLeave>
        </Scripts>
    </Button>

    <!-- ScubaLootFrame - main frame for the gui -->

    <Frame name="ScubaLootFrame" toplevel="true" movable="true" parent="UIParent" enableMouse="true" hidden="true">
        <TitleRegion setAllPoints="true"/>
        <Size>
            <AbsDimension x="325" y="295" />
        </Size>
        <Anchors>
            <Anchor point="CENTER" />
        </Anchors>
        <Scripts>
            <OnLoad>
                ScubaLoot_OnLoad()
            </OnLoad>
            <OnEvent>
                ScubaLoot_OnEvent(event, arg1, arg2, arg3, arg4, arg5)
            </OnEvent>
            <OnShow>
                ScubaLootFrameTitleText_OnShow()
            </OnShow>
        </Scripts>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border"
                  tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11" />
                <Size>
                    <AbsDimension x="128" y="17" />
                </Size>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32" />
            </TileSize>
            <EdgeSize>
                <AbsValue val="32" />
            </EdgeSize>
        </Backdrop>

        <Layers>
            <Layer level="ARTWORK">
                <Texture name="ScubaLootFrameTitle" file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size>
                        <AbsDimension x="276" y="64" />
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="12" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>

                <FontString name="ScubaLootFrameTitleText" inherits="GameFontNormal" text="Hi">
                    <Anchors>
                        <Anchor point="TOP" relativeTo="ScubaLootFrame">
                            <Offset>
                                <AbsDimension x="0" y="-2" />
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>

        <!-- ScubaLootFrame's internal frames -->

        <Frames>

            <!-- individual buttons for each link -->

            <Button name="ScubaLootRow1" inherits="ScubaLootItemRowTemplate" id="1">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootMainItem">
                        <Offset>
                            <AbsDimension x="10" y="-24"/>
                        </Offset>
                    </Anchor>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow2" inherits="ScubaLootItemRowTemplate" id="2">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow1" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow3" inherits="ScubaLootItemRowTemplate" id="3">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow2" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow4" inherits="ScubaLootItemRowTemplate" id="4">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow3" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow5" inherits="ScubaLootItemRowTemplate" id="5">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow4" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow6" inherits="ScubaLootItemRowTemplate" id="6">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow5" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow7" inherits="ScubaLootItemRowTemplate" id="7">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow6" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow8" inherits="ScubaLootItemRowTemplate" id="8">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow7" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>
            <Button name="ScubaLootRow9" inherits="ScubaLootItemRowTemplate" id="9">
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootRow8" relativePoint="BOTTOMLEFT"/>
                </Anchors>
            </Button>

            <!-- scroll frame to contain the buttons above -->

            <CheckButton name="FinishedVotingCheckbox" hidden="false">
                <Size>
                    <AbsDimension x="32" y="32"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="ScubaLootFrame">
                        <Offset>
                            <AbsDimension x="10" y="-10" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentText" inherits="GameFontNormal" text="Finished">
                            <Anchors>
                                <Anchor point="LEFT" relativePoint="RIGHT">
                                    <Offset>
                                        <AbsDimension x="-1" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnClick>
                        ScubaLoot_FinishedVoting()
                    </OnClick>
                </Scripts>
                <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
            </CheckButton>

            <Button name="ScubaLootMainItem" hidden="true">
                <Size>
                    <AbsDimension x="210" y="24"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT" relativeTo="FinishedVotingCheckbox">
                        <Offset>
                            <AbsDimension x="2" y="-30"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <FontString name="$parentText" font="GameFontNormalSmall" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="50" y="22"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="4" y="-1"/>
                                    </Offset>
                                </Anchor>
                                <Anchor point="RIGHT"/>
                            </Anchors>
                        </FontString>
                        <Texture name="$parentIcon" relativeTo="$parentText" relativePoint="RIGHT">
                            <Size>
                                <AbsDimension x="22" y="22"/>
                            </Size>
                            <Anchors>
                                <Anchor point="LEFT">
                                    <Offset>
                                        <AbsDimension x="64" y="-1"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </Texture>
                        <FontString name="$parentName" font="GameFontHighlight" justifyH="LEFT">
                            <Size>
                                <AbsDimension x="170" y="22"/>
                            </Size>
                            <Anchors>
                                <Anchor point="LEFT" relativeTo="$parentIcon" relativePoint="RIGHT">
                                    <Offset>
                                        <AbsDimension x="4" y="0"/>
                                    </Offset>
                                </Anchor>
                                <Anchor point="RIGHT"/>
                            </Anchors>
                        </FontString>
                    </Layer>
                    <Layer level="BACKGROUND">
                        <Texture name="$parentHighlight" file="Interface\QuestFrame\UI-QuestLogTitleHighlight" hidden="true" alphaMode="ADD">
                            <Size>
                                <AbsDimension x="170" y="24"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parentIcon"/>
                            </Anchors>
                        </Texture>
                    </Layer>
                </Layers>
                <Scripts>
                    <OnEnter>
                            getglobal(this:GetName().."Highlight"):Show()
                            ScubaLoot_ShowMainItemToolTip()
                    </OnEnter>
                    <OnLeave>
                            if not this.lockedHighlight then
                                getglobal(this:GetName().."Highlight"):Hide()
                            end
                            GameTooltip:Hide()
                    </OnLeave>
                </Scripts>
            </Button>

            <Button name="ScubaLootClose" inherits="GameMenuButtonTemplate" text="X">
                <Size>
                    <AbsDimension x="30" y="30"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativeTo="ScubaLootFrame">
                        <Offset>
                            <AbsDimension x="-10" y="-10" />
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                            this:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>

            <!---->

        </Frames>
    </Frame>
</Ui>
